        </div>
    </div>
</div>

<div class="index-product">
    <div class="container">
        <div class="block-title">
            <h3>Sản Phẩm</h3>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-3 product-single">
                            <div class="product clearfix">
                                <div class="product-image">
                                    <a href="#">
                                        <img src="@Html.DisplayFor(modelItem => item.Image)">
                                    </a>
                                </div>
                                <div class="product-desc">
                                    <div class="products-info" style="text-align: center;">
                                        <a class="products-name" href="#">@Html.DisplayFor(modelItem => item.Name)</a>
                                    </div>
                                    <div class="products-price">
                                        <p class="price-box">
                                            <span class="price-item"> @Html.DisplayFor(modelItem => item.Price)</span>
                                        </p>
                                    </div>
                                    <div class="products-add">
                                        <form>
                                            <button class="btn btn-danger add-to-cart">
                                                <i class="fa fa-shopping-cart"></i>
                                                @Html.ActionLink("Buy", "Buy", "Cart", new { id = item.Id, quantity = 1 }, null)
                                            </button>
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
